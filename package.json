{
  "name": "prompt-formatter-mcp",
  "version": "0.1.0",
  "description": "MCP server for intelligently formatting and optimizing prompts using rule-based analysis and structured templates",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "prompt-formatter-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:quick": "node scripts/test-simple.js",
    "test:enhanced": "node scripts/test-enhanced.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "prompt",
    "formatter",
    "llm",
    "claude",
    "gpt",
    "prompt-engineering"
  ],
  "author": "ZaVang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZaVang/prompt-formatter-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ZaVang/prompt-formatter-mcp/issues"
  },
  "homepage": "https://github.com/ZaVang/prompt-formatter-mcp#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
